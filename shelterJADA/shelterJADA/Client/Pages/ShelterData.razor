@page "/shelterdata"
@using shelterJADA.Shared
@inject HttpClient Http

<h1>ShelterData</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (ShelterListe == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Kommunekode</th>
                <th>Kommunenavn</th>
                <th>Shelternavn</th>
                <th>Antal pladser</th>
                <th>K-beskrivelse</th>
                <th>L-beskrivelse</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var shelter in ShelterListe)
            {
            <tr>
                <td>@shelter._id.Oid.ToString()</td>
                <td>@shelter.Properties.kommunekode</td>
                <td>@shelter.Properties.cvr_navn</td>
                <td>@shelter.Properties.navn</td>
                <td>@shelter.Properties.antal_pl</td>
                <td>@shelter.Properties.beskrivels</td>
                <td>@shelter.Properties.lang_beskr</td>
            </tr>
            }
        </tbody>
    </table>
}

@code {

    private List<Shelter> ShelterListe;

    protected override async Task OnInitializedAsync()
    {
        ShelterListe = await Http.GetFromJsonAsync<List<Shelter>>("Shelter");

    }

}
